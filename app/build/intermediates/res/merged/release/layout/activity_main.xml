<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jeancle.cheap.activity.MainActivity">
    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_menu"
        android:layout_below="@+id/tv_bg" />

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/dm001"-->
    <!--android:background="@color/gray"-->
    <!--android:id="@+id/view" />-->

    <RadioGroup
        android:id="@+id/rg_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm090"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f2f2ed"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dm010"
        android:paddingTop="@dimen/dm008">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm050"
            android:button="@null"
            android:drawablePadding="@dimen/dm005"
            android:drawableTop="@drawable/bg_home"
            android:gravity="center"
            android:paddingLeft="@dimen/dm040"
            android:paddingRight="@dimen/dm040"
            android:text="首页"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/dm020" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rb_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="@dimen/dm005"
            android:drawableTop="@drawable/bg_cart"
            android:gravity="center"
            android:paddingLeft="@dimen/dm040"
            android:paddingRight="@dimen/dm040"
            android:text="优惠券"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/dm020" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rb_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm050"
            android:button="@null"
            android:drawablePadding="@dimen/dm005"
            android:drawableTop="@drawable/bg_mine"
            android:gravity="center"
            android:paddingLeft="@dimen/dm040"
            android:paddingRight="@dimen/dm040"
            android:text="我的"
            android:textColor="@color/bg_text"
            android:textSize="@dimen/dm020" />
    </RadioGroup>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical"
    tools:context="com.jeancle.cheap.activity.login.LoginActivity">

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm020"
        android:padding="@dimen/dm020"
        android:text="注册"
        android:textColor="@color/input_bg"
        android:textSize="@dimen/dm028" />

    <EditText
        android:id="@+id/et_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm090"
        android:layout_marginLeft="@dimen/dm050"
        android:layout_marginRight="@dimen/dm050"
        android:layout_marginTop="@dimen/dm200"
        android:background="@color/input_bg"
        android:gravity="center_vertical"
        android:hint="帐户:"
        android:paddingLeft="@dimen/dm020" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm090"
        android:layout_marginLeft="@dimen/dm050"
        android:layout_marginRight="@dimen/dm050"
        android:layout_marginTop="@dimen/dm030"
        android:background="@color/input_bg"
        android:gravity="center_vertical"
        android:hint="密码:"

        android:paddingLeft="@dimen/dm020" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm050"
        android:layout_marginRight="@dimen/dm050"
        android:layout_marginTop="@dimen/dm050"
        android:background="@color/login_login"
        android:gravity="center"
        android:padding="@dimen/dm020"
        android:text="登录"
        android:textColor="@color/input_bg"
        android:textSize="@dimen/dm028" />

    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm050"
        android:layout_marginRight="@dimen/dm050"
        android:layout_marginTop="@dimen/dm030"
        android:padding="@dimen/dm010"
        android:text="忘记密码?"
        android:textColor="@color/forget"
        android:textSize="@dimen/dm024" />
</LinearLayout>

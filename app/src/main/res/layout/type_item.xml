<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"

    android:layout_gravity="center"
    android:background="@drawable/binajiekuang"
    >
    <LinearLayout
        android:padding="@dimen/dm020"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_classify_pic"
            android:layout_width="@dimen/dm050"
            android:layout_height="@dimen/dm050"
            android:src="@drawable/nanxie"/>
        <TextView
            android:id="@+id/tv_type"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男鞋"
            android:layout_marginTop="@dimen/dm010"
            android:textColor="@color/gray"
            android:textSize="@dimen/dm026" />
    </LinearLayout>

</LinearLayout>
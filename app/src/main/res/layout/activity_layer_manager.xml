<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_layer_manager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jeancle.cheap.activity.LayerManagerActivity">

    <include layout="@layout/title" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_manager"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_manager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dm010">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dm010"
            android:layout_weight="1"
            android:background="#c21515"
            android:gravity="center"
            android:padding="@dimen/dm010"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="@dimen/dm026" />

        <View
            android:layout_width="@dimen/dm010"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dm010"
            android:layout_weight="1"
            android:background="#c21515"
            android:gravity="center"
            android:padding="@dimen/dm010"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="@dimen/dm026" />
    </LinearLayout>
</LinearLayout>

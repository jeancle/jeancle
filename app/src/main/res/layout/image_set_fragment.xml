<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm010">

        <TextView
            android:layout_width="@dimen/dm000"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dm010"
            android:text="图层名称"
            android:textColor="@color/gray"
            android:textSize="@dimen/dm026" />

        <View
            android:layout_width="@dimen/dm001"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dm010"
            android:layout_marginTop="@dimen/dm010"
            android:background="@color/gray" />

        <TextView
            android:layout_width="@dimen/dm000"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dm010"
            android:text="可见性"
            android:textColor="@color/gray"

            android:textSize="@dimen/dm026" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:background="@color/gray" />

    <ListView
        android:id="@+id/lv_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm000"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm010"
        android:layout_marginLeft="@dimen/dm150"
        android:layout_marginRight="@dimen/dm150"
        android:gravity="center"
        android:padding="@dimen/dm005">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm020"
            android:background="@drawable/modify"
            android:padding="@dimen/dm005"
            android:src="@drawable/up" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm020"
            android:background="@drawable/modify"
            android:padding="@dimen/dm005"
            android:src="@drawable/down" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm020"
            android:background="@drawable/modify"
            android:padding="@dimen/dm005"
            android:src="@drawable/add" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/modify"
            android:padding="@dimen/dm005"
            android:src="@drawable/remove" />


    </LinearLayout>

</LinearLayout>